<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="liip_monitor.check.elastic_search" public="true" class="Liip\MonitorBundle\Check\ElasticSearch">
            <argument>%%liip_monitor.check.elastic_search.host%%</argument>
            <argument>%%liip_monitor.check.elastic_search.port%%</argument>
            <argument>%%liip_monitor.check.elastic_search.index%%</argument>
            <tag name="liip_monitor.check" alias="elastic_search" />
        </service>
    </services>
</container>
